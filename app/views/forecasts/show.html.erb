<h1>Today's forecast</h1>

<% if @forecast %>
  <p><strong>Current Temperature:</strong> <%= @forecast[:current_temp] %><%= @forecast[:temp_unit] %></p>
  <% if @forecast[:high] && @forecast[:low] %>
    <p><strong>High:</strong> <%= @forecast[:high] %><%= @forecast[:temp_unit] %></p>
    <p><strong>Low:</strong> <%= @forecast[:low] %><%= @forecast[:temp_unit] %></p>
  <% end %>
  <% if @cached %>
    <p><em>This forecast was retrieved from cache.</em></p>
  <% end %>
<% else %>
  <p>Forecast not available.</p>
<% end %>
